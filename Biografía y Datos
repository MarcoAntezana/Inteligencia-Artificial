def mostrar_menu(opciones):
    print('Seleccione una opción:')
    for clave in sorted(opciones):
        print(f' {clave}) {opciones[clave][0]}')


def leer_opcion(opciones):
    while (a := input('Opción: ')) not in opciones:
        print('Opción incorrecta, vuelva a intentarlo.')
    return a


def ejecutar_opcion(opcion, opciones):
    opciones[opcion][1]()


def generar_menu(opciones, opcion_salida):
    opcion = None
    while opcion != opcion_salida:
        mostrar_menu(opciones)
        opcion = leer_opcion(opciones)
        ejecutar_opcion(opcion, opciones)
        print()


def menu_principal():
    opciones = {
        '1': ('Imprimir biografía', accion1),
        '2': ('Datos personales', accion2),
        '3': ('Salir', salir)
    }

    generar_menu(opciones, '4')


def accion1():
    print('BIOGRAFIA:')
    print('Nacido el 15 de Julio de 2002 en la ciudad de Sucre, una vez terminados los estudios del kinder en la \n'
          'ciudad de Sucre me fui a Monteagudo por el trabajo de mis padres y ahi pasé la mayor parte de mi vida, \n'
          'estudiando primaria y secundaria en el Colegio "Mariano" y ahora estoy estudiando la carrera de Diseño y \n'
          'Animación Digital en la Universidad San Francisco Xavier.')


def accion2():
    print('DATOS PERSONALES:')
    print('Nombres: Marco Antonio')
    print('Apellidos: Antezana Carvajal')
    print('Edad: 20 años')
    print('Altura: 1.66m')



def salir():
    print('Saliendo...')


if __name__ == '__main__':
    menu_principal()
